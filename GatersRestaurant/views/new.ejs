<% include ./partials/header %>

<div class="container" style="margin-top: 7em">
    <div class="row">
        <h1 style="text-align: center">Create a new Menu Item</h1>
        <div style="width: 30%; margin:25px auto">
            <form action="/menu" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="food[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[price]" placeholder="price">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default bt-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/menu">Go back to Menu</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>